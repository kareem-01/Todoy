<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/cardview_dark_background"
        android:hint="Search"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/search_svgrepo_com" />

    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Statistics"
        app:layout_constraintStart_toStartOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@id/search" />


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statistics" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pie_chart"
        app:layout_constraintStart_toStartOf="@+id/search"
        android:layout_marginTop="10dp"
        android:text="Category"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/personal_card"
        android:layout_width="160dp"
        android:layout_height="144dp"
        app:layout_constraintTop_toBottomOf="@+id/category"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/category"
        >

        <TextView
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="personal ToDo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/user"
            android:drawablePadding="12dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Tasks Left"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/team_card"
        android:layout_width="160dp"
        android:layout_height="144dp"
        app:layout_constraintTop_toTopOf="@id/personal_card"
        app:layout_constraintStart_toEndOf="@+id/personal_card"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team ToDo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/usersthree"
            android:drawablePadding="12dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Tasks Left"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all"
       android:layout_gravity="bottom|center"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/recently"
        app:layout_constraintTop_toBottomOf="@+id/personal_card"
        android:layout_marginTop="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/search"
        android:text="Recently"
        />


</androidx.constraintlayout.widget.ConstraintLayout>